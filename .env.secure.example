# =============================================================================
# AliExpress Python API Proxy - Environment Configuration
# =============================================================================

# AliExpress API Configuration (REQUIRED)
# ========================================
# Get these credentials from your AliExpress Open Platform account:
# 1. Register at https://open.aliexpress.com/
# 2. Create a new application
# 3. Apply for affiliate API access
# 4. Copy your App Key, App Secret, and Tracking ID

ALIEXPRESS_APP_KEY=your_app_key_here
ALIEXPRESS_APP_SECRET=your_app_secret_here
ALIEXPRESS_TRACKING_ID=your_tracking_id_here

# API Localization Settings
# =========================
# Language: EN, ES, FR, DE, IT, PT, RU, JA, KO, TH, VI, AR, HE, PL
ALIEXPRESS_LANGUAGE=EN

# Currency: USD, EUR, GBP, CAD, AUD, JPY, CNY, RUB, BRL, etc.
ALIEXPRESS_CURRENCY=USD

# Server Configuration
# ====================
# Host and port for the FastAPI server
API_HOST=0.0.0.0
API_PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Security Configuration (CRITICAL - CHANGE IN PRODUCTION!)
# ==========================================================
# Admin API key for accessing admin endpoints
ADMIN_API_KEY=your-super-secret-admin-key-change-this-in-production

# Internal API key for service-to-service communication
INTERNAL_API_KEY=ALIINSIDER-2025-change-this-too

# Internal CLI key for authenticated terminal access (Production only)
# Set to "DISABLED" or omit to disable CLI bypass
INTERNAL_CLI_KEY=ALIINSIDER-2025

# Rate Limiting Configuration
# ===========================
# Maximum requests per minute per IP address
MAX_REQUESTS_PER_MINUTE=60

# Maximum requests per second per IP address (burst protection)
MAX_REQUESTS_PER_SECOND=5

# CORS Configuration
# ==================
# Comma-separated list of allowed origins for CORS
# Add your domain and any GPT integration domains
ALLOWED_ORIGINS=https://chat.openai.com,https://chatgpt.com,https://your-domain.com,http://localhost:3000

# Production Settings
# ===================
# Environment: development, staging, production
ENVIRONMENT=production

# Debug mode: true for development, false for production
DEBUG=false

# Enable/disable mock mode when API credentials are not available
MOCK_MODE=false

# Service Module Configuration
# ============================
# Enable/disable individual service modules (true/false)
ENABLE_AFFILIATE_SERVICES=true
ENABLE_DROPSHIPPING_SERVICES=true
ENABLE_SOLUTION_SERVICES=true

# Advanced Features (Optional)
# =============================
# Enable automatic affiliate link generation in product searches
AUTO_GENERATE_AFFILIATE_LINKS=true

# Enable response caching (improves performance)
ENABLE_CACHING=true

# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600

# Enable request/response logging for debugging
ENABLE_REQUEST_LOGGING=true

# Future Enhancements (Optional - Not Yet Implemented)
# ====================================================
# Database URL for persistent logging and analytics
# DATABASE_URL=postgresql://user:pass@localhost/aliexpress_logs

# Redis URL for distributed caching and rate limiting
# REDIS_URL=redis://localhost:6379

# Webhook URL for real-time notifications
# WEBHOOK_URL=https://your-domain.com/webhooks/aliexpress

# Monitoring and Analytics
# ========================
# Enable performance monitoring
ENABLE_MONITORING=true

# Enable error tracking and reporting
ENABLE_ERROR_TRACKING=true

# GPT Integration Settings
# ========================
# Custom GPT name for tracking and analytics
GPT_NAME=AliExpress Product Assistant

# GPT version for API compatibility
GPT_API_VERSION=1.0.0

# =============================================================================
# IMPORTANT SECURITY NOTES:
# 
# 1. NEVER commit this file with real credentials to version control
# 2. Use strong, unique passwords for ADMIN_API_KEY and INTERNAL_API_KEY
# 3. Restrict ALLOWED_ORIGINS to only trusted domains
# 4. Set DEBUG=false in production
# 5. Use HTTPS in production (configure your deployment platform)
# 6. Regularly rotate your AliExpress API credentials
# 7. Monitor your API usage and set up alerts for unusual activity
# 
# For more information, see:
# - AliExpress API Documentation: https://developers.aliexpress.com/
# - Project Documentation: README.md
# - Security Best Practices: SECURITY.md
# =============================================================================